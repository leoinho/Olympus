@model Fullbar.Olympus.Dominio.Entidade.TreinamentoInscricaoUsuario

@{
    Layout = null;
}

<html>
<head>
    <title>Certificado</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        h1 {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 78px;
            text-align: center;
            color: #0C4DA2;
            font-weight: bold;
        }

        p {
            font-family: Arial, Helvetica, sans-serif;
            color: #231D1D;
        }

            p span {
                color: #0C4DA2;
            }
    </style>
</head>
<body bgcolor="#FFFFFF" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">

    <table id="Table_01" border="0" cellpadding="0" cellspacing="0" align="center">
        <tr height="284">
            <td width="70" height="284" >
                <img src=@Url.Content("~/Email/Certificado/images/certificado_01.jpg") width="70" height="284" alt="" style="display:block;">
            </td>
            <td width="1784" height="284">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_02.jpg") width="1784" height="284" alt="" style="display:block;">
            </td>
            <td  width="60" height="284">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_03.jpg") width="60" height="284" alt="" style="display:block;">
            </td>
        </tr>
        <tr height="230">
            <td width="70" height="230">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_04.jpg") width="70" height="230" alt="" style="display:block;">
            </td>
            <td width="1784" height="230">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_05.jpg") width="1784" height="230" alt="" style="display:block;">
            </td>
            <td width="60" height="230">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_06.jpg") width="60" height="230" alt="" style="display:block;">
            </td>
        </tr>
        <tr height="235">
            <td width="70" height="235">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_07.jpg") width="70" height="235" alt="" style="display:block;">
            </td>
            <td width="1784" height="235" align="left" valign="middle">
                <h1 style="font-family:Arial, Helvetica, sans-serif; font-size:78px; text-align:center; color:#0C4DA2;">
                    <strong>@Model.Nome</strong>
                </h1>
            </td>
            <td width="60" height="235">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_09.jpg") width="60" height="235" alt="" style="display:block;">
            </td>
        </tr>
        <tr height="312">
            <td width="70" height="312">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_10.jpg") width="70" height="312" alt="">
            </td>
            <td width="1784" height="312">
                <table width="1784" height="312" cellpadding="0" cellspacing="0">
                    <tr>
                        <td width="400"></td>
                        <td>
                            <p style="font-size:30px; font-family:Arial, Helvetica, sans-serif;">
                                participou do “<span style="color:#0C4DA2;">
                                    <strong>
                                        @Model.Treinamento
                                    </strong>
                                </span>" , realizado em: <span style="color:#0C4DA2;">
                                    <strong>
                                        @Model.DataTreinamento.Day.ToString()
                                    </strong>
                                </span> de <span style="color:#0C4DA2;">
                                    <strong>
                                        @Model.DataTreinamento.ToString("MMMM", new System.Globalization.CultureInfo("pt-BR"))
                                    </strong>
                                </span>de <span style="color:#0C4DA2;">
                                    <strong>
                                        @Model.DataTreinamento.Year.ToString()
                                    </strong>
                                </span>, das <span style="color:#0C4DA2;">
                                    <strong>
                                        @Model.HoraInicio
                                    </strong>
                                </span> as <span style="color:#0C4DA2;">
                                    <strong>
                                        @Model.HoraFim
                                    </strong>
                                </span> em @Model.Cidade - @Model.UF.
                            </p>
                        </td>
                        <td width="400"></td>
                    </tr>
                </table>
            </td>
            <td width="60" height="312">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_12.jpg") width="60" height="312" alt="">
            </td>
        </tr>
        <tr height="292">
            <td width="70" height="292">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_13.jpg") width="70" height="292" alt="" style="display:block;">
            </td>
            <td width="1784" height="292">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_14.jpg") width="1784" height="292" alt="" style="display:block;">
            </td>
            <td width="60" height="292">
                <img src=@Url.Content("~/Email/Certificado/images/certificado_15.jpg") width="60" height="292" alt="" style="display:block;">
            </td>
        </tr>
    </table>

</body>
</html>