@{
    /* RESOURCE */

    //Arquivo de Resource
    string arquivoResource = (string)Session["ArquivoResource"];

    //Idioma
    string idioma = (string)Session["CultureIdioma"];
    System.Globalization.CultureInfo ci = new System.Globalization.CultureInfo(idioma);
    
    //Tipo de Perfil (idIdioma)
    var usuario = (Admin.Olympus.Dominio.Entidade.Administrador)Session["Administrador"];
    int idIdioma = usuario.idTipo;
}

<!-- Import -->
<script type='text/javascript' src='https://www.google.com/jsapi'></script>
<script type='text/javascript'>
    google.load('visualization', '1', { packages: ['corechart'] });
</script>

<!-- TÍTULO -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <strong>Dashboard</strong> 
            <p style="line-height: 0.7;">
                @if (idIdioma == 1)
                {
                    <span style="font-size: 18px">@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardSubTituloOBL", @ci)</span>
                }
                else if (idIdioma == 2)
                {
                    <span style="font-size: 18px">@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardSubTituloOLA", @ci)</span>
                }
                else if (idIdioma == 3)
                {
                    <span style="font-size: 18px">@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardSubTituloOMS", @ci)</span>
                }
            </p>
        </h1>
    </div>
</div>

<!-- CONTEÚDO -->
<div class="row">
    <div class="col-lg-12">

        <!-- DASHBOARD -->
        <div class="row">

            <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">
                                    @ViewBag.TodosUsuarios
                                </div>
                                <div>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardResumoUsuariosCadastrados", @ci))</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">
                                    @ViewBag.UsuariosPorSite
                                </div>                                
                                @if (idIdioma == 1)
                                {
                                    <div>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardResumoUsuariosCadastradosBrasil", @ci))</div>
                                }
                                else if (idIdioma == 2)
                                {
                                    <div>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardResumoUsuariosCadastradosOLA", @ci))</div>
                                }
                                else if (idIdioma == 3)
                                {
                                    <div>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardResumoUsuariosCadastradosOMS", @ci))</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">
                                    @ViewBag.InscritosPorSite
                                </div>
                                @if (idIdioma == 1)
                                {
                                    <div>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardResumoUsuariosInscritosBrasil", @ci))</div>
                                }
                                else if (idIdioma == 2)
                                {
                                    <div>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardResumoUsuariosCliquesOLA", @ci))</div>
                                }
                                else if (idIdioma == 3)
                                {
                                    <div>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardResumoUsuariosCliquesOMS", @ci))</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <br />

        <!-- OBL -->
        @if (idIdioma == 1)
        { 
            <div class="row">
                <div class="col-lg-6">
                    <h4>@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardTituloRelatorioCadastrosPorSite", @ci)</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardRelatorioCadastroPorSiteTituloCadastro", @ci))</th>
                                    <th>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardRelatorioCadastroPorSiteTituloSite", @ci))</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.CadastroSite)
                                {
                                    <tr>
                                        <td>@item.inQtd</td>
                                        <td>@item.dsSite</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h4>@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardTituloRelatorioInscritosPorSite", @ci)</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardRelatorioInscritoPorSiteTituloCadastro", @ci))</th>
                                    <th>@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardRelatorioInscritoPorSiteTituloPais", @ci))</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.InscricaoSite)
                                {
                                    <tr>
                                        <td>@item.inQtd</td>
                                        <td>@item.dsSite</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <br />

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> @Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardGraficoInscricoesTitulo", @ci))
                            <div class="pull-right">
                                <div class="btn-group">
                                    @Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardMes", @ci))
                                    @Html.DropDownList("ddlMes", (IEnumerable<SelectListItem>)ViewBag.Mes, new { @class = "form-control", @style = "color: #555; width: 140px !important; height: 29px; display: inline;" })
                                    <input type="button" id="btnFiltrar" class=" btn-primary" value="@Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "BotaoFiltrar", @ci))" />
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div id="divInscricoes">
                                @{ Html.RenderAction("GraficoTreinamentoInscricaoMes", "Dashboard", new { inMes = @ViewBag.inMes }); }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

            @*<div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> @Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardGraficoCancelamentoAusenciaTitulo", @ci))
                        </div>
                        <div class="panel-body">
                            @Html.Raw(@ViewBag.GraficoTreinamentoCancelamento)
                        </div>
                    </div>
                </div>
            </div>
            <br />*@
        }
        else
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> @Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardGraficoCliquesTreinamentoTitulo", @ci))
                        </div>
                        <div class="panel-body">
                            @Html.Raw(ViewBag.GraficoCliquesTreinamento)
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <i class="fa fa-bar-chart-o fa-fw"></i> 
                            @if (idIdioma == 1) 
                            { 
                                @Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardGraficoAcessoDiarioTituloOBL", @ci)) 
                            }
                            else if (idIdioma == 2)
                            {
                                @Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardGraficoAcessoDiarioTituloOLA", @ci)) 
                            }
                            else
                            {
                                @Html.Raw(@HttpContext.GetGlobalResourceObject(@arquivoResource, "DashboardGraficoAcessoDiarioTituloOMS", @ci)) 
                            }
                    </div>
                    <div class="panel-body">

                        @Html.Raw(@ViewBag.GraficoAcessosDiarios)

                    </div>
                </div>
            </div>
        </div>

        <br /><br />

    </div>
</div>

<script>

    $(document).ready(function () {

        $("#btnFiltrar").click(function (e) {
            e.preventDefault();

            $("#loading").fadeIn();
            
            $("#divInscricoes").load('/Dashboard/GraficoTreinamentoInscricaoMes?inMes=' + $("#ddlMes").val(), function () {
                $("#loading").fadeOut();
            });

        });

    });

</script>