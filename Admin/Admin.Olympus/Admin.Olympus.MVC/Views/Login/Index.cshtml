@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

    /* RESOURCE */

    //Arquivo de Resource
    string resource = (string)Session["ArquivoResource"];

    //Idioma
    string idioma = (string)Session["CultureIdioma"];
    System.Globalization.CultureInfo ci = new System.Globalization.CultureInfo(idioma);
}

<!-- Custom -->
<link href="/assets/css/login.css" rel="stylesheet">

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading" style="padding: 0px;">
                    <img src="/assets/img/logo.png" alt="" class="logo" id="logo-login" />
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Get))
                    {
                        <fieldset>
                            <p><input type="text" name="login" id="txtLogin" maxlength="20" class="form-control" placeholder="@HttpContext.GetGlobalResourceObject(@resource, "PaginaLoginPlaceLogin", @ci)" /></p>
                            <p><input type="password" name="senha" id="txtSenha" maxlength="50" class="form-control" placeholder="@HttpContext.GetGlobalResourceObject(@resource, "PaginaLoginPlaceSenha", @ci)" /></p>
                            <input type="submit" name="btnEntrar" id="btnEntrar" value="@HttpContext.GetGlobalResourceObject(@resource, "PaginaLoginBotaoEntrar", @ci)" class="btn btn-lg btn-primary btn-block" />
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>